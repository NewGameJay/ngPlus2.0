{% for group in tasks %}
  <div class="card">
    <div class="card-header py-3">
      <div class="d-flex align-items-center">
        <h5>{{ group.name }}</h5>
        <div class="hstack gap-3 ms-auto">
          <a href="#" class="p-1 text-muted">
            <i class="bi bi-calendar-event"></i>
          </a>
          <a href="#" class="p-1 text-muted">
            <i class="bi bi-three-dots"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="card-body py-0">
      <div class="list-group list-group-flush mb-5">
        {% for task in group.content %}
        <div class="list-group-item py-3">
          <div class="row g-3 align-items-center">
            <div class="col-sm-6 col-12 d-flex">
              <div class="form-check form-check-linethrough d-flex align-items-center gap-1">
                <input class="form-check-input w-rem-5 h-rem-5 mt-0 rounded-circle border-dashed flex-none" type="checkbox" id="check-{{ group.name | lower | replace(' ', '-')}}-{{ loop.index }}"{{ ' checked' if task.checked }}>
                <a href="#offcanvasCreate" class="form-check-label fw-normal text-heading text-primary-hover ms-2" data-bs-toggle="offcanvas">
                  {{ task.name }}
                </a>
              </div>
            </div>
            <div class="col-sm-auto col-12 ms-sm-auto">
              <div class="hstack gap-5 justify-content-end">
                <div>
                  <span class="badge bg-{{ task.badge.color }}-subtle text-{{ task.badge.color }}">{{ task.badge.text }}</span>
                </div>
                <div class="position-relative text-sm">
                  <i class="bi bi-check-circle-fill text-{{ task.progress.color if task.progress.color else 'muted' }}"></i>
                  <span class="d-inline-block w-8 text-muted text-end">{{ task.progress.value }}%</span>
                </div>
                <div class="position-relative text-sm">
                  <i class="bi bi-files-alt text-muted me-1"></i>
                  <a href="#" class="text-muted text-primary-hover stretched-link">18</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endfor %}
