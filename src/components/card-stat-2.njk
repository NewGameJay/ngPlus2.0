<div class="card border-primary-hover">
  <div class="card-body p-4">
    <div class="d-flex align-items-center gap-2">
      {% img class="w-rem-5 flex-none", src=img if img else '/img/crypto/icon/btc.svg' %}
      <a href="/pages/page-details.html" class="h6 stretched-link">{{ title if title else 'BTC' }}</a>
    </div>
    <div class="text-sm fw-semibold mt-3">
      {{ subtitle if subtitle else '3.2893 USDT' }}
    </div>
    <div class="d-flex align-items-center gap-2 mt-1 text-xs">
      <span class="badge badge-xs bg-{{ badge.color if badge.color else 'success' }}">
        <i class="bi bi-arrow-up-right"></i>
      </span>
      <span>{{ badge.value if badge.value else '+13.7%' }}</span>
    </div>
  </div>
</div>
