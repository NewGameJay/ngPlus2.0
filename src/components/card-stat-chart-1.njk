<div class="card bg-{{ color if color else 'success' }} bg-opacity-10 border-{{ color if color else 'success' }} border-opacity-40">
  <div class="p-5">
    <div class="d-flex gap-3 mb-5">
      {% img src=(img.src if img.src else '/img/crypto/icon/btc.svg'), class="avatar" %}
      <div class="">
        <a class="d-inline-block text-sm text-heading fw-semibold" href="/pages/trade/details.html">
          {{ title if title else 'BTC-USD' }}
        </a>
        <span class="d-block text-xs text-muted">{{ subtitle if subtitle else 'Bitcoin - USD' }}</span>
      </div>
    </div>
    <div class="d-flex align-items-end">
      <div class="hstack gap-2">
        <span class="badge bg-{{ color if color else 'success' }} bg-opacity-25 text-{{ color if color else 'success' }}">{{ badge.text if badge.text else '+2,44%' }}</span>
        <span class="badge badge-count bg-{{ color if color else 'success' }} text-xs rounded-circle">
          <i class="bi bi-{{ badge.icon if badge.icon else 'arrow-up-right' }}"></i>
        </span>
      </div>
      <div class="w-rem-32 ms-auto">
        <div data-toggle="spark-chart" data-type="line" data-height="36" data-color="{{ color if color else 'success' }}" data-dataset="{{ data if data else '[22, 21, 20, 18, 26, 65, 31, 47, 10, 44, 45, 22, 21, 20, 18, 26, 65, 31, 47, 10, 44, 45]' }}"></div>
      </div>
    </div>
    <div class="text-lg fw-bold text-heading mt-2">
      {{ total if total else '$23,000.00' }}
    </div>
  </div>
</div>
