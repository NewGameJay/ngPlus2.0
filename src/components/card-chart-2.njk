---
name: Card with chart
preview_class: max-w-screen-sm p-6 mx-auto
---

<div class="card {{ class if class }}">
  <div class="card-body pb-0">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h5>{{ title if title else 'Performance' }}</h5>
      </div>
      <div class="hstack align-items-center">
        <a href="#" class="text-muted">
          <i class="bi bi-arrow-repeat"></i>
        </a>
      </div>
    </div>
    <div class="mx-n4">
      <div id="chart-{{ chart.type if chart.type else 'line' }}" data-height="{{ chart.height if chart.height else '245' }}"></div>
    </div>
  </div>
</div>
