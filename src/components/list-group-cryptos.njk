<div class="px-6 py-5 border-bottom">
  <input type="text" class="form-control" placeholder="Search token or paste address" aria-label="Search">
</div>
<div class="p-2">
  <div class="vstack">
    {% for item in cryptos.slice(0,5) %}
      <div class="position-relative d-flex gap-3 p-4 rounded bg-body-secondary-hover">
        <div class="icon flex-none">
          {% img src=("/img/crypto/color/"+item.slug+".svg"), class="w-rem-10 h-rem-10" %}
        </div>
        <div class="d-flex flex-fill">
          <div class="">
            <a href="#" class="stretched-link text-heading fw-bold">{{ item.abv }}</a>
            <span class="d-block text-muted text-sm">{{ item.name }}</span>
          </div>
          <div class="ms-auto fw-bold text-heading">
            {{ item.amount }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<div class="px-6 py-5 bg-body-secondary d-flex justify-content-center">
  <button class="btn btn-sm btn-dark">
    <i class="bi bi-gear me-2"></i>Manage tokens
  </button>
</div>
