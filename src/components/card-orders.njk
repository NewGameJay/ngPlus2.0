<div class="card">
  <div class="card-body pb-0">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h5>Transaction History</h5>
      </div>
      <div class="hstack align-items-center">
        <a href="#" class="text-muted">
          <i class="bi bi-arrow-repeat"></i>
        </a>
      </div>
    </div>
    <div class="list-group list-group-flush">
      {% for item in orders.slice(0, (limit if limit else 10)) %}
        <div class="list-group-item d-flex align-items-center justify-content-between gap-6">
          <div class="d-flex align-items-center gap-3">
            <div class="icon icon-shape rounded-circle icon-sm flex-none w-rem-10 h-rem-10 text-sm bg-primary bg-opacity-25 text-primary">
              <i class="bi bi-send-fill"></i>
            </div>
            <div class="">
              <span class="d-block text-heading text-sm fw-semibold">
                {{ item.name }}
              </span>
              <span class="d-none d-sm-block text-muted text-xs">
                2 days ago
              </span>
            </div>
          </div>
          <div class="d-none d-md-block text-sm">
            0xd029384sd343fd...eq23
          </div>
          <div class="d-none d-md-block">
            <span class="badge bg-body-secondary text-{{ item.badge.color if item.badge.color else 'success' }}">
              {{ item.badge.text if item.badge.text else 'Successful' }}
            </span>
          </div>
          <div class="text-end">
            <span class="d-block text-heading text-sm fw-bold">
              +0.2948 BTC
            </span>
            <span class="d-block text-muted text-xs">
              +$10,930.90
            </span>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
