<!doctype html>
<html lang="{{ site.lang }}" data-theme="light">
  <head>
  {% include 'meta.njk' %}
  {% include 'styles.njk' %}
</head>
<body>
  <div class="row g-0 justify-content-center gradient-bottom-right start-purple middle-indigo end-pink">
    <div class="col-md-6 col-lg-5 col-xl-5 position-fixed start-0 top-0 vh-100 overflow-y-hidden d-none d-lg-flex flex-lg-column">
      <div class="p-12 py-xl-10 px-xl-20">
        <a class="d-block" href="/pages/dashboard.html">
          {% img src="/img/logos/logo-light.svg", class="h-rem-10" %}
        </a>
        <div class="mt-16">
          <h1 class="ls-tight fw-bolder display-6 text-white mb-5">
            Trade the worldâ€™s top assets and cryptos
          </h1>
          <p class="text-white text-opacity-75 pe-xl-24">
            Create beautiful websites that are supported by rock-solid design principles.
          </p>
        </div>
      </div>
      <div class="mt-auto ps-16 ps-xl-20">
        {% img class="img-fluid rounded-top-start-4", src="/img/marketing/shot-1.png" %}
      </div>
    </div>
    <div class="col-12 col-md-12 col-lg-7 offset-lg-5 min-vh-100 overflow-y-auto d-flex flex-column justify-content-center position-relative bg-body rounded-top-start-lg-4 border-start-lg shadow-soft-5">
      <div class="w-md-50 mx-auto px-10 px-md-0 py-10">
        <div class="mb-10">
          <a class="d-inline-block d-lg-none mb-10" href="/pages/dashboard.html">
            {% img src="/img/logos/logo-dark.svg", class="h-rem-10" %}
          </a>
          <h1 class="ls-tight fw-bolder h3">
            {{ title }}
          </h1>
          {% if type == 'login' %}
          <div class="mt-3 text-sm text-muted">
            <span>Don't have an account?</span>
            <a href="/pages/register.html" class="fw-semibold">Sign up</a> for a free trial.
          </div>
          {% else %}
          <div class="mt-3 text-sm text-muted">
            <span>Already have an account?</span>
            <a href="/pages/login.html" class="fw-semibold">Sign in</a> to your account.
          </div>
          {% endif %}
        </div>
        {{ content | safe }}
        <div class="py-5 text-center">
          <span class="text-xs text-uppercase fw-semibold">or</span>
        </div>
        <div class="row g-2">
          <div class="col-sm-6">
            <a href="#" class="btn btn-neutral w-100">
              <span class="icon icon-sm pe-2">
                {% img src="/img/social/github.svg" %}
              </span>
              Github
            </a>
          </div>
          <div class="col-sm-6">
            <a href="#" class="btn btn-neutral w-100">
              <span class="icon icon-sm pe-2">
                {% img src="/img/social/google.svg" %}
              </span>
              Google
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>
